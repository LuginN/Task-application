@model TaskApp.Models.PaginatedListViewModel<TaskApp.Models.Entities.Performer>
@using TaskApp.Extensions;

@{
    ViewBag.Title = "Index";
}

<h2>Исполнители:</h2></br>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    Имя:
                </th>
                <th>
                    Фамилия:
                </th>
                <th>
                    Отчество:
                </th>
                <th>
                    Действия:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Items)
            {
                <tr>
                    <td>
                       @m.Name
                    </td>
                    <td>
                        @m.Surname
                    </td>
                    <td>
                        @m.Patronymic
                    </td>
                    <td>
                                @Html.ActionLink("Удалить", "Delete", new { id = m.PerformerId }) |
                                @Html.ActionLink("Изменить", "Edit",  new { id = m.PerformerId }) |
                                @Html.ActionLink("Показать", "Show",  new { id = m.PerformerId })
                    </td>
                </tr>
            }
        </tbody>
    </table></br>
    <h3>@Html.ActionLink("Добавить исполнителя", "Create")</h3></br>
    <h4>@string.Format("{0} страница из {1}", Model.CurrentPage, (Model.TotalPages == 0?1:Model.TotalPages) )</h4>
    @Html.PageLinks(Model, x => { return string.Format("Page{0}", x); })

